<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ĐĂNG KÝ"
        android:textSize="40dp"
        android:textStyle="bold"
        android:textColor="#1E90FF"
        android:layout_marginBottom="30dp"
        />
    <TextView
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên người dùng"
        android:textColor="#1E90FF"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/txt_username"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Nhập tên đăng nhập"
        android:textStyle="bold"
        android:textColorHint="#AFACAC"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_edtxt"
        android:backgroundTint="#D0DCD8"
        />

    <TextView
        android:layout_marginBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="#1E90FF"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/txt_email"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Nhập email của bạn"
        android:textStyle="bold"
        android:textColorHint="#AFACAC"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/custom_edtxt"
        android:backgroundTint="#D0DCD8"
        />
    <TextView
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:textColor="#1E90FF"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/edt_password"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Nhập mật khẩu"
        android:textStyle="bold"
        android:textColorHint="#AFACAC"
        android:textSize="15dp"
        android:inputType="textPassword"
        android:background="@drawable/custom_edtxt"
        android:backgroundTint="#D0DCD8"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nhập lại Mật khẩu"
        android:textColor="#1E90FF"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        />
    <EditText
        android:id="@+id/edt_passwordConfirm"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:hint="Nhập lại mật khẩu"
        android:textStyle="bold"
        android:textColorHint="#AFACAC"
        android:textSize="15dp"
        android:inputType="textPassword"
        android:background="@drawable/custom_edtxt"
        android:backgroundTint="#D0DCD8"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />



    <CheckBox
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cb"
        android:textSize="15dp"
        android:layout_marginLeft="25dp"
        ></CheckBox>

    <Button
        android:id="@+id/btnsigup"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="ĐĂNG KÝ"
        android:textColor="#fff"
        android:backgroundTint="#1E90FF"
        android:background="@drawable/custom_btn"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:onClick="SigupClicked"
        ></Button>
    <TextView
        android:id="@+id/lksignin"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_in"
        android:textSize="15dp"
        android:textColor="@color/teal_700"
        />


</LinearLayout>