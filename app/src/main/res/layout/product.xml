                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:outlineSpotShadowColor="#ccc"
                    >

                    <ImageView
                        android:id="@+id/banerproduct"
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="start"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_menu"
                        />
                    <ImageView
                        android:id="@+id/imvgiohang"
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:src="@drawable/cart_icon"
                        android:layout_marginRight="10dp"
                        />
                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/custom_edtxt"
                        android:hint="Search"
                        android:drawableRight="@drawable/icon_size"
                        android:drawablePadding="8dp"

                        />
                </androidx.appcompat.widget.Toolbar>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:background="#ccc">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/productCard"
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="4dp"
                        app:cardUseCompatPadding="true"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        tools:ignore="MissingClass">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/productImage1"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_weight="1"
                                android:maxHeight="50dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/img_medicine" />

                            <TextView
                                android:id="@+id/productTitle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Product Name"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/productDescription"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:textSize="13sp"
                                android:text="Product Description" />

                            <TextView
                                android:id="@+id/productPrice"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:text="Price: $10.99"
                                android:textSize="15sp"
                                android:textStyle="bold"
                                android:textColor="@color/chudao"
                                />
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                >
                                <TextView
                                    android:id="@+id/cart"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/icon_cart_size"
                                    android:gravity="center"
                                    />
                                <Button
                                    android:layout_marginLeft="25dp"
                                    android:layout_gravity="end"
                                    android:layout_width="90dp"
                                    android:layout_height="30dp"
                                    android:background="@drawable/custom_btn"
                                    android:backgroundTint="#1E90FF"
                                    android:text="mua ngay"
                                    android:textSize="10sp"
                                    android:textColor="#fff"
                                    android:textStyle="bold"

                                    />
                            </LinearLayout>
                        </LinearLayout>
