<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".cart">

<!--    header-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/back_product"
            android:layout_width="50dp"

            android:layout_height="25dp"
            android:background="@drawable/back_product"
            android:layout_gravity="left"
            android:padding="10dp" />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giỏ hàng"
            android:textSize="20sp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_gravity="left"
            />
    </LinearLayout>

    <!--    info customer-->
    <LinearLayout
        android:layout_marginTop="20dp"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin khách hàng"
            android:textSize="23sp"
            android:textColor="#050505"
            android:layout_gravity="center"
            android:gravity="start"
            android:layout_weight="2"
           />
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Thay đổi"
            android:textSize="20sp"
            android:background="@drawable/custom_btn"
            android:textColor="#000000"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_gravity="right"
            />
    </LinearLayout>

<!--    infor customer detail-->
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngô Văn tuyến | +8412345678"
            android:textSize="23sp"
            android:textColor="#050505"
            android:layout_gravity="left"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thanh khê Tây, Thanh Khê, Đà Nẵng, Việt Nam"
            android:textSize="23sp"
            android:textColor="#050505"
            android:layout_gravity="left"
            />
    </LinearLayout>

<!--    product-->
    <LinearLayout
        android:background="@drawable/custom_boder_txt"
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
          />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_medicine"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paracetamol"
                android:textSize="20sp"
                android:textColor="#050505"
                android:layout_gravity="left"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phân loại: thuốc giảm đau"
                android:textSize="13sp"
                android:textColor="#050505"
                android:layout_gravity="left"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miễn phí đổi trả trong 2h"
                android:textSize="16sp"
                android:textColor="#050505"
                android:layout_gravity="left"
                android:background="@drawable/custom_boder_txt"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="đ21.999"
                android:textSize="18sp"
                android:textColor="#050505"
                android:layout_gravity="left"
                android:textStyle="bold"
                />
            <!--             choose amount product           -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="left"

                >

                <Button
                    android:id="@+id/btnDecrease"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="-" />

                <TextView
                    android:id="@+id/tvQuantity"
                    android:padding="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1" />

                <Button
                    android:id="@+id/btnIncrease"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="+" />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>
    <!--    product-->
    <LinearLayout
        android:background="@drawable/custom_boder_txt"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/img_medicine"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >
            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Paracetamol"
                android:textSize="20sp"
                android:textColor="#050505"
                android:layout_gravity="left"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phân loại: thuốc giảm đau"
                android:textSize="13sp"
                android:textColor="#050505"
                android:layout_gravity="left"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Miễn phí đổi trả trong 2h"
                android:textSize="16sp"
                android:textColor="#050505"
                android:layout_gravity="left"
                android:background="@drawable/custom_boder_txt"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="đ21.999"
                android:textSize="18sp"
                android:textColor="#050505"
                android:layout_gravity="left"
                android:textStyle="bold"
                />
            <!--             choose amount product           -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_gravity="left"

                >

                <Button
                    android:id="@+id/btnDecrease1"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="-" />

                <TextView
                    android:id="@+id/tvQuantity1"
                    android:padding="16sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1" />

                <Button
                    android:id="@+id/btnIncrease1"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:text="+" />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

<!--    footer  payment-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:gravity="bottom"
            >
<!--            discount-->
            <LinearLayout
                android:weightSum="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_gravity="bottom"
                >
                <TextView
                    android:textSize="20sp"
                    android:textColor="#494949"
                    android:textStyle="bold"
                    android:text="Mã giảm giá"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:gravity="left"
                    android:layout_weight="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhập hoặc chọn mã >"
                    android:textSize="20sp"
                    android:textColor="#494949"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"
                    android:gravity="right"
                    android:layout_weight="1"

                    />
            </LinearLayout>
<!--            payment -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                android:weightSum="4"
                >

                <CheckBox
                    android:id="@+id/ckbAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="tất cả"
                    android:layout_weight="1"
                    />


                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tổng thanh toán"
                    android:layout_gravity="center"
                    android:textSize="18sp"
                    android:textColor="#6A6A6A"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_weight="2"
                    />
                <Button
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MUA NGAY"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:background="@drawable/custom_btn"
                    android:backgroundTint="#1E90FF"
                    android:layout_gravity="center"
                    android:gravity="right"
                    />
            </LinearLayout>

        </LinearLayout>

</LinearLayout>